    <div class="container">
        <h1>üîÑ Verificador de Pal√≠ndromos</h1>
        
        <p class="subtitle">
            Ingresa una palabra o frase para verificar si es un pal√≠ndromo.<br>
            Se ignorar√°n espacios, puntuaci√≥n y may√∫sculas/min√∫sculas.
        </p>

        <div class="input-group">
            <label for="text-input">Texto a verificar:</label>
            <input 
                type="text" 
                id="text-input" 
                placeholder="Ej: Anita lava la tina"
                autocomplete="off"
            >
        </div>

        <button id="check-btn">Verificar Pal√≠ndromo</button>

        <div id="result" class="result-empty">
            Ingresa un texto y presiona "Verificar Pal√≠ndromo"
        </div>
    </div>

    <script>
        function isPalindrome(str) {
            // Limpiar la cadena: solo alfanum√©ricos y convertir a min√∫sculas
            const cleanStr = str.replace(/[^a-zA-Z0-9]/g, '').toLowerCase();
            const reversedStr = cleanStr.split('').reverse().join('');
            
            return cleanStr === reversedStr;
        }

        function checkPalindrome() {
            // Obtener elementos del DOM
            const textInput = document.getElementById('text-input');
            const result = document.getElementById('result');
            const inputValue = textInput.value;

            // Verificar si el input est√° vac√≠o
            if (!inputValue.trim()) {
                alert('Please input a value');
                return;
            }

            const isAPalindrome = isPalindrome(inputValue);
            
            if (isAPalindrome) {
                result.textContent = `${inputValue} is a palindrome`;
                result.className = 'result-palindrome';
            } else {
                result.textContent = `${inputValue} is not a palindrome`;
                result.className = 'result-not-palindrome';
            }
        }

        // Event listener para el bot√≥n
        document.getElementById('check-btn').addEventListener('click', checkPalindrome);

        // Event listener para Enter en el input
        document.getElementById('text-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                checkPalindrome();
            }
        });

        // Event listener para limpiar resultado cuando se modifica el input
        document.getElementById('text-input').addEventListener('input', function() {
            const result = document.getElementById('result');
            
            if (result.className !== 'result-empty') {
                result.textContent = 'Ingresa un texto y presiona "Verificar Pal√≠ndromo"';
                result.className = 'result-empty';
            }
        });
    </script>
